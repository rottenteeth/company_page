<% include ../partials/header %>

<h1 style="text-align: center;">Add new product</h1>
<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/products" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Product name">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" name="price" id="price" placeholder="0.00" step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image url">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="desc" placeholder="Description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Add!</button>
                </div>
            </form>
            <div>
                <a style="text-align: center" href="/products">Go to the home page</a>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>